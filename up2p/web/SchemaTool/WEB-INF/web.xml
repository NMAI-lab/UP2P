<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>SchemaTool</display-name>
	<description>A web-based tool for novice computer users to write a simple
XML Schema to decribe a resource.</description>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<taglib>
		<taglib-uri>SchemaToolTags</taglib-uri>
		<taglib-location>/WEB-INF/SchemaTool.tld</taglib-location>
	</taglib>
</web-app>
